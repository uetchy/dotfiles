[include]
  path = ~/.gitconfig.local
[user]
  name = Yasuaki Uechi
  email = uetchy@randompaper.co
[github]
  user = uetchy
[commit]
  template = ./commit-template
[alias]
  pr = pull-request
  co = checkout
  b = branch -avv
  s = status
  c = commit
  last = log -1 HEAD
  unstage = reset HEAD --
  tower = "!tower() { gittower .; }; tower"
  up = "!up() { gitup; }; up"
  ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[push]
  default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[credential]
	helper = osxkeychain
[ghq]
  root = ~/Repos/src
