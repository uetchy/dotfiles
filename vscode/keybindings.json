// Place your key bindings in this file to overwrite the defaults
[
  // Advanced New Line
  {
    "key": "ctrl+cmd+n",
    "command": "extension.advancedNewFile"
  },
  {
    "key": "alt+cmd+n",
    "command": "-extension.advancedNewFile"
  },
  // Explorer Enter behaviour
  {
    "key": "enter",
    "command": "list.select",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "cmd+enter",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // Rename action
  {
    "key": "ctrl+cmd+r",
    "command": "editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "f2",
    "command": "-editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  // Ctrl+s to trigger suggest
  {
    "key": "ctrl+s",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  },
  // Disable arrow keys in suggestion panel
  {
    "key": "down",
    "command": "-selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "up",
    "command": "-selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  // Additonal keys for accepting suggestion
  {
    "key": "ctrl+;",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+enter",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  // Test task
  {
    "key": "ctrl+cmd+t",
    "command": "workbench.action.tasks.test"
  },
  // SCM View
  {
    "key": "shift+cmd+g",
    "command": "workbench.view.scm"
  },
  // File history navigation
  {
    "key": "ctrl+]",
    "command": "workbench.action.navigateForward"
  },
  {
    "key": "ctrl+shift+-",
    "command": "-workbench.action.navigateForward"
  },
  {
    "key": "ctrl+[",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "ctrl+-",
    "command": "-workbench.action.navigateBack"
  },
  // Editor splitting
  {
    "key": "ctrl+cmd+\\",
    "command": "workbench.action.splitEditorOrthogonal",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k cmd+\\",
    "command": "-workbench.action.splitEditorOrthogonal"
  },
  {
    "key": "ctrl+cmd+j",
    "command": "workbench.action.joinAllGroups",
    "when": "editorTextFocus"
  },
  // Terminal and pane
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "cmd+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "cmd+j",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "shift+cmd+]",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "alt+cmd+down",
    "command": "-workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "shift+cmd+[",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "key": "alt+cmd+up",
    "command": "-workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+cmd+m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+w",
    "command": "workbench.action.togglePanel",
    "when": "panelFocus && !terminalFocus"
  },
  {
    "key": "cmd+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  // Markdown
  {
    "key": "shift+cmd+v",
    "command": "markdown.showPreviewToSide",
    "when": "editorLangId == 'markdown'"
  },
  {
    "key": "cmd+k v",
    "command": "-markdown.showPreviewToSide",
    "when": "editorLangId == 'markdown'"
  },
  // AnalyticsWidget
  {
    "key": "shift+cmd+d",
    "command": "-extension.fabric8AnalyticsWidgetFullStack"
  },
  // Smart select
  {
    "key": "ctrl+d",
    "command": "-deleteRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+d",
    "command": "editor.action.smartSelect.expand",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+right",
    "command": "-editor.action.smartSelect.expand",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+d",
    "command": "editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+left",
    "command": "-editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },
  // Find related
  {
    "key": "ctrl+cmd+p",
    "command": "findrelated.show",
    "when": "editorFocus"
  },
  {
    "key": "alt+r",
    "command": "-findrelated.show",
    "when": "editorFocus"
  },
  // Stackoverflow
  {
    "key": "cmd+h",
    "command": "-extension.stackoverflow-search"
  },
  // Reassign open settings
  {
    "key": "cmd+k cmd+p",
    "command": "workbench.action.openSettings"
  },
  {
    "key": "cmd+,",
    "command": "-workbench.action.openSettings"
  },
  // Parameter hints
  {
    "key": "cmd+,",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  {
    "key": "shift+cmd+space",
    "command": "-editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  // Hover
  {
    "key": "cmd+,",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k cmd+i",
    "command": "-editor.action.showHover",
    "when": "editorTextFocus"
  },
  // Zen mode
  {
    "key": "cmd+k cmd+z",
    "command": "workbench.action.toggleZenMode"
  },
  {
    "key": "cmd+k z",
    "command": "-workbench.action.toggleZenMode"
  },
  // Move editor to right group
  {
    "key": "cmd+k cmd+right",
    "command": "workbench.action.moveEditorToRightGroup"
  },
  {
    "key": "cmd+k cmd+right",
    "command": "-workbench.action.focusRightGroup"
  },
  // Convert Selection
  {
    "key": "alt+cmd+c",
    "command": "-extension.convertSelection",
    "when": "editorTextFocus"
  },
  // Debug Launcher
  {
    "key": "cmd+k cmd+d",
    "command": "debugLauncher.auto"
  },
  // ghq
  {
    "key": "ctrl+g",
    "command": "extension.ghqOpenInNewWindow"
  },
  {
    "key": "ctrl+g",
    "command": "-workbench.action.gotoLine"
  }
]
