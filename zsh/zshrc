# SSH
remote() {
  ssh $1 -t 'screen -qR'
}

remosh() {
  mosh $1 -- screen -qR
}

forward() {
  ssh -L ${1}:localhost:${1} -N ${2}
}

# remote worker scripts
export WORKER=sfc

sk() {
  echo üöÄ Syncing to $WORKER
  rsync -C --filter=":- .gitignore" --exclude=".git*" -avz . ${WORKER}:jobs/$(basename $PWD)
}

run() {
  echo üèÉ Running \"$@\" on $WORKER
  ssh -t $WORKER "cd jobs/$(basename $PWD); $@"
}

skrun() {
  sk && echo '' && run $@
}

ssh-mount() {
  mkdir ./$1
  sshfs $1: ./$1 -o volname=$1 -o cache_timeout=10
}


