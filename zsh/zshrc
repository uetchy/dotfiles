pip-update() {
  pip2 list --format=legacy --outdated | awk '{print $1}' | xargs pip2 install -U
  pip3 list --format=legacy --outdated | awk '{print $1}' | xargs pip3 install -U
}

cask-update() {
  brew cask outdated | awk '{print $1}' | xargs brew cask reinstall
}


juno() {
  open -a Juno $1
}


