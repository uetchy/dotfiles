# maintenance utils
alias cask-update="brew cask outdated | awk '{print \$1}' | xargs brew cask reinstall"
update() {
  pushd $DOTFILES_DIR && git pull && popd
  reload
  HOMEBREW_INSTALL_CLEANUP=1 brew upgrade
  pip-update
  cask-update
  mas upgrade
  david -gu
}
clearCache() {
  npm cache verify
  gem cleanup
  brew cleanup
  brew doctor
}
clearQLCache() {
  qlmanage -r
  qlmanage -r cache
}

