# refind
mountesp() {
  mkdir /Volumes/ESP
  sudo mount -t msdos /dev/disk0s1 /Volumes/ESP
  sudo vim /Volumes/ESP/EFI/refind/refind.conf
}

unmountesp() {
  diskutil unmount /Volumes/esp
}


